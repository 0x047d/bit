export MAKEFLAGS   := --no-print-directory
.DEFAULT_GOAL      := all
.SUBLIME_TARGETS:     all
.PHONY:               all\
                      build\
                      clean
CC                 := clang++
STD                := c++11
BIN                := $(CURDIR)/bin
EXT                := $(CURDIR)/ext
INCLUDE            := $(CURDIR)/include
LIB                := $(CURDIR)/lib
OBJ                := $(CURDIR)/obj
SRC                := $(CURDIR)/src
TEST               := $(CURDIR)/test
EXE                := $(BIN)/a.out
MAIN               := $(SRC)/main.cpp
FILES              := $(wildcard $(LIB)/*.cpp)
OBJECTS            := $(patsubst $(LIB)/%,$(OBJ)/%,$(FILES:.cpp=.o))
